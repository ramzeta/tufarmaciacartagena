---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyActionBar from '../components/StickyActionBar.astro';
---

<BaseLayout
  title="Contacto | Farmacia Cartagena"
  description="Contacta con Farmacia Cartagena. Calle Prol. Angel Bruna 11, Cartagena. Tel. 968 51 31 50. Formulario de contacto y ubicación."
>
  <Header />

  <main>
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="max-w-2xl mx-auto mb-12 text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Contacto</h1>
          <p class="text-lg text-gray-600">
            Estamos aquí para ayudarte. Contáctanos por teléfono, visítanos o completa el formulario.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Información de Contacto -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Información de Contacto</h2>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Dirección</h3>
                  <address class="not-italic text-gray-600">
                    Calle Prol. Angel Bruna, 11<br/>
                    30300 Cartagena, Murcia
                  </address>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Teléfono</h3>
                  <a href="tel:+34968513150" class="text-emerald-600 hover:text-emerald-700 font-semibold text-lg">
                    968 51 31 50
                  </a>
                  <p class="text-sm text-gray-500 mt-1">También por WhatsApp</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Horario</h3>
                  <p class="text-emerald-600 font-medium">✓ Abierto ahora</p>
                  <p class="text-gray-600 text-sm mt-1">Consúltanos para más información</p>
                </div>
              </div>
            </div>

            <div class="mt-8">
              <a
                href="https://www.google.com/maps/dir/?api=1&destination=Calle+Prol.+Angel+Bruna+11+30300+Cartagena+Murcia"
                target="_blank"
                rel="noopener noreferrer"
                class="btn-primary w-full justify-center"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
                Cómo llegar
              </a>
            </div>
          </div>

          <!-- Formulario -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Envíanos un Mensaje</h2>
            <form id="contact-form" class="space-y-5">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                  Nombre <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                  aria-required="true"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                  Email <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                  aria-required="true"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
                  Teléfono
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                  Mensaje <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors resize-none"
                  aria-required="true"
                ></textarea>
              </div>

              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="privacy"
                  name="privacy"
                  required
                  class="mt-1 w-4 h-4 text-emerald-600 border-gray-300 rounded focus:ring-emerald-500"
                  aria-required="true"
                />
                <label for="privacy" class="text-sm text-gray-600">
                  He leído y acepto la <a href="/legal#privacidad" class="text-emerald-600 hover:text-emerald-700 underline">política de privacidad</a> y el tratamiento de mis datos personales. <span class="text-red-500">*</span>
                </label>
              </div>

              <button
                type="submit"
                class="btn-primary w-full justify-center text-lg"
              >
                Enviar mensaje
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </button>

              <p class="text-xs text-gray-500 text-center">
                Los campos marcados con <span class="text-red-500">*</span> son obligatorios
              </p>
            </form>

            <div id="form-success" class="hidden mt-6 p-4 bg-emerald-50 border border-emerald-200 rounded-lg">
              <p class="text-emerald-700 font-medium">✓ Mensaje enviado correctamente</p>
              <p class="text-emerald-600 text-sm mt-1">Te responderemos lo antes posible.</p>
            </div>

            <div id="form-error" class="hidden mt-6 p-4 bg-red-50 border border-red-200 rounded-lg">
              <p class="text-red-700 font-medium">✗ Error al enviar el mensaje</p>
              <p class="text-red-600 text-sm mt-1">Por favor, inténtalo de nuevo o llámanos directamente.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mapa -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Encuéntranos</h2>
        <div class="rounded-xl overflow-hidden shadow-lg h-96 lg:h-[500px]">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3154.123456789!2d-0.9860!3d37.6026!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzfCsDM2JzA5LjQiTiAwwrA1OScwOS42Ilc!5e0!3m2!1ses!2ses!4v1234567890"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Ubicación de Farmacia Cartagena en el mapa"
          ></iframe>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <StickyActionBar />

  <script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const successMsg = document.getElementById('form-success');
    const errorMsg = document.getElementById('form-error');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Ocultar mensajes previos
      successMsg?.classList.add('hidden');
      errorMsg?.classList.add('hidden');

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      try {
        // Aquí iría la llamada a tu endpoint serverless o backend
        // Por ahora simulamos éxito
        await new Promise(resolve => setTimeout(resolve, 1000));

        // Mostrar éxito
        successMsg?.classList.remove('hidden');
        form.reset();

        // Scroll al mensaje
        successMsg?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      } catch (error) {
        // Mostrar error
        errorMsg?.classList.remove('hidden');
        errorMsg?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    });
  </script>
</BaseLayout>
