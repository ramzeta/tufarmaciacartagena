---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyActionBar from '../components/StickyActionBar.astro';

const galleryImages = [
  { src: '/images/galeria/imagen1.webp', alt: 'Fachada de Farmacia Cartagena' },
  { src: '/images/galeria/imagen2.webp', alt: 'Interior de la farmacia' },
  { src: '/images/galeria/imagen3.webp', alt: 'Laboratorio de formulación magistral' },
  { src: '/images/galeria/imagen4.webp', alt: 'Zona de atención al cliente' },
  { src: '/images/galeria/imagen5.webp', alt: 'Productos de dermocosmética' },
  { src: '/images/galeria/imagen6.webp', alt: 'Equipo de farmacéuticos' },
  { src: '/images/galeria/imagen7.webp', alt: 'Instalaciones del laboratorio' },
  { src: '/images/galeria/imagen8.webp', alt: 'Zona de dispensación' },
];
---

<BaseLayout
  title="Galería de Fotos | Farmacia Cartagena"
  description="Ver fotos del interior y exterior de Farmacia Cartagena. Conoce nuestras instalaciones y laboratorio en Cartagena."
>
  <Header />

  <main>
    <section class="bg-emerald-50 section-padding">
      <div class="container-custom text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Galería de Fotos
        </h1>
        <p class="text-lg text-gray-600">
          Conoce nuestras instalaciones, laboratorio y equipo
        </p>
      </div>
    </section>

    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {galleryImages.map((image, index) => (
            <div class="group relative aspect-video rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all cursor-pointer">
              <img
                src={image.src}
                alt={image.alt}
                loading={index < 3 ? 'eager' : 'lazy'}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-all flex items-end p-4">
                <p class="text-white font-semibold text-sm">{image.alt}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-12 bg-emerald-50 rounded-xl p-8 text-center">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">¿Quieres ver más?</h2>
          <p class="text-lg text-gray-600 mb-6">
            Visítanos en persona para conocer todas nuestras instalaciones y servicios
          </p>
          <a
            href="https://www.google.com/maps/dir/?api=1&destination=Calle+Prol.+Angel+Bruna+11+30300+Cartagena+Murcia"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary text-lg"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
            </svg>
            Cómo llegar
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <StickyActionBar />
</BaseLayout>
